<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:background="@drawable/boxwithcorner"
    >

    <TextView
        android:id="@+id/homepageshortcutimgtxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Select Position"
        android:fontFamily="@font/sneakout"
        android:gravity="center"
        android:textColor="#000000"
        android:textSize="20dp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/shortcutlay1"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:layout_below="@+id/homepageshortcutimgtxt"
        >

        <TextView
            android:id="@+id/shortcutimg1"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_margin="2dp"
            android:background="@drawable/box"
            android:textColor="#000000"
            android:text="1"
            android:gravity="center"
            android:textSize="30dp"
            android:layout_weight="1"
            />

        <TextView
            android:id="@+id/shortcutimg2"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_margin="2dp"
            android:textColor="#000000"
            android:background="@drawable/box"
            android:text="2"
            android:gravity="center"
            android:textSize="30dp"
            android:layout_weight="1"
            />

        <TextView
            android:id="@+id/shortcutimg3"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_margin="2dp"
            android:textColor="#000000"
            android:background="@drawable/box"
            android:text="3"
            android:gravity="center"
            android:textSize="30dp"
            android:layout_weight="1"
            />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/shortcutlay2"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:layout_below="@+id/shortcutlay1"
        >

        <TextView
            android:id="@+id/shortcutimg4"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_margin="2dp"
            android:textColor="#000000"
            android:background="@drawable/box"
            android:text="4"
            android:gravity="center"
            android:textSize="30dp"
            android:layout_weight="1"
            />

        <TextView
            android:id="@+id/shortcutimg5"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_margin="2dp"
            android:textColor="#000000"
            android:background="@drawable/box"
            android:text="5"
            android:gravity="center"
            android:textSize="30dp"
            android:layout_weight="1"
            />

        <TextView
            android:id="@+id/shortcutimg6"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_margin="2dp"
            android:textColor="#000000"
            android:background="@drawable/box"
            android:text="6"
            android:gravity="center"
            android:textSize="30dp"
            android:layout_weight="1"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/shortcutlay3"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:paddingBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_below="@+id/shortcutlay2"
        >

        <TextView
            android:id="@+id/shortcutimg7"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_below="@+id/shortcutlay2"
            android:layout_margin="2dp"
            android:textColor="#000000"
            android:background="@drawable/box"
            android:text="7"
            android:gravity="center"
            android:textSize="30dp"
            android:layout_weight="1"
            />

        <TextView
            android:id="@+id/shortcutimg8"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_margin="2dp"
            android:textColor="#000000"
            android:background="@drawable/box"
            android:text="8"
            android:gravity="center"
            android:textSize="30dp"
            android:layout_weight="1"
            />

        <TextView
            android:id="@+id/shortcutimg9"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_margin="2dp"
            android:textColor="#000000"
            android:background="@drawable/box"
            android:text="9"
            android:gravity="center"
            android:textSize="30dp"
            android:layout_weight="1"
            />

    </LinearLayout>


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:id="@+id/dressmagaersetposbtn"
        android:layout_below="@+id/shortcutlay3"
        android:background="@drawable/buttonbluefade"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:textColor="#ffffff"
        android:textSize="15dp"
        android:textStyle="bold"
        android:text="Submit"
        />

</RelativeLayout>


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="TODO"
        android:src="@drawable/close"
        android:id="@+id/setpostialogclose"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true" />


</RelativeLayout>